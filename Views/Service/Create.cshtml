@model BeautyLuxe.Models.Service
<br>


<style>
body {
background-color: #fef4ff;
}
</style>

<div class="container create-container card-border" style="margin: 5rem auto">
    <div class="text-center mt-4">
        <h2>Create a New Service</h2>
    </div>

    <form asp-controller="Service" asp-action="Create" method="post" class="create-form">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Service Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group" id="slot-container">
            <label class="form-label">Slots</label>

            <div class="slot-input" id="slot-0">
                <input asp-for="Slots[0].SlotTime" class="form-control" placeholder="mm-dd-yyyy HH:mm PM" />
            </div>

           
            <button type="button" id="add-slot-btn" class="btn btn-secondary mt-2">Add More Slot</button>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Service" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>

   

</div>



<style>
