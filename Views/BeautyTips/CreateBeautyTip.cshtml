@model BeautyLuxe.Models.BeautyTip
<br>

<div class="container create-container">
    <div class="text-center mt-4">
        <h2>Create a New Beauty Tips</h2>
    </div>

    <form asp-controller="BeautyTips" asp-action="CreateBeautyTip" method="post" class="create-form" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title" class="form-label">Beauty Tip Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
       
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="BeautyTips" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .create-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .create-form {
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #343a40;
