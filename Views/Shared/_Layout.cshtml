<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BeautyLuxe</title>
    
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-cerulean.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-journal.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-litera.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lumen.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-minty.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-morph.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-pulse.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-quartz.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-sketchy.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-simplex.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-solar.min.css" asp-append-version="true"/> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-spacelab.min.css" asp-append-version="true"/>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-united.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-vapor.min.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="/~/lib/bootstrap/dist/css/bootstrap-yeti.min.css" asp-append-version="true"/> *@


    @{
        object lottiefiles = "https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js";
    }
    <script src="@lottiefiles" crossorigin="anonymous"></script>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BeautyLuxe.styles.css" asp-append-version="true"/>

</head>
<body >
<header>
    <nav class="navbar navbar-expand-sm fixed-top navbar-toggleable-sm border-bottom box-shadow mb-3"
             style="background-color: #ff8fab!important">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    @*<img src="~/img.svg" alt="My Logo" width="130px" style="border-radius: 50px" />*@
                    
                    <img src="~/loogo.svg" alt="Beauty Salon Logo" width="60px" style="border-radius: 10px" />

                </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @* <li class="nav-item"> *@
                    @*     <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                    @* </li> *@
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Service" asp-action="Index">Services</a>
                    </li>
                    
                    <li class="nav-item">
                                            <a class="nav-link text-white" asp-area="" asp-controller="BeautyTips" asp-action="Index">Beauty Tips</a>
                                        </li>

                    @if (User.IsInRole("client"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">My Dashboard</a>
                        </li>
                    }

                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">My Dashboard</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
        <partial name="_LoginPartial"/>
    </nav>
</header>
<div class="container">
    <main role="main" class="py-3" style="margin-top: 85px;">
        @RenderBody()
    </main>
</div>

<footer class="py-4 text-center text-black" 
        style="background-color: #ff8fab!important"
        >

        
 <div class="container">
    <div class="row">
      <div class="col-md-4 text-center">
        @* <img src="~/logo.svg" alt="Your Logo" class=" mb-3" style="width: 150px"> *@
        <p class="">"Elevating Beauty, Inspiring Confidence"</p>
      </div>
      <div class="col-md-4 text-center">
        <ul class="list-unstyled d-grid gap-3">
         <li>
                        <a class="nav-link text-inherit" asp-area="" asp-controller="Service" asp-action="Index">Services</a>
                    </li>
                    
                    <li>
                                            <a class="nav-link text-inherit" asp-area="" asp-controller="BeautyTips" asp-action="Index">Beauty Tips</a>
                                        </li>
          
        </ul>
      </div>
      <div class="col-md-4 text-md-right">
        <p class="mb-1">BeautyLuxe &copy; 2024</p>
        @* <p class="mb-1">3870, Los Angeles</p> *@
        <p class="mb-1">California, United States</p>
        <p class="">info@beautyluxe.com</p>
      </div>
    </div>
  </div>    
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>